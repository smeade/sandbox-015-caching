<div class="page-header">
  <%= link_to new_product_review_path(@product), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Review
  <% end %>
  <h1>Reviews for <%= link_to @product.name, @product %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @reviews) do |review| %>
        <td><%= review.title %></td>
        <td><%= review.body %></td>
        <td>
          <%= link_to 'Edit', edit_product_review_path(@product, review) %> |
          <%= link_to 'Destroy', [@product, review], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
